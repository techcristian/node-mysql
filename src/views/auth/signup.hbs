<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center bg-dark text-primary">
        <div class="card-header">
          <h3>SignUp</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
          <div class="form-group">
            <input type="text" name="fullname" placeholder="fullname" class="form-control bg-dark text-white"  autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="username" placeholder="user" class="form-control bg-dark text-white">
          </div>
          <div class="form-group">
            <input type="password" name="password" placeholder="password" class="form-control bg-dark text-white">
          </div>
          <div class="form-group">
            <button class=" btn btn-dark text-primary btn-block">
                <h4>Send</h4>
            </button>
          </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>