<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <div class="card-title text-center text-primary p-2">
          <h3>Edit a task</h3>
        </div>
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
           <div class="form-group">
           <input type="text" value="{{link.title}}" class="form-control bg-dark text-white" name="title" placeholder="title" autofocus>
           </div>
           <div class="form-group">
             <input type="url" value="{{link.url}}"  name="url" class="form-control bg-dark text-white" placeholder="url">
           </div>
           
            <div class="form-group">
              <textarea name="description"   placeholder="description" rows="3" class="form-control bg-dark text-white">{{link.description}}</textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-dark text-primary btn-block">
                  <h4>Editing</h4>
                </button>
            </div>
            

          </form>
        </div>
      </div>
    </div>
  </div>

</div>